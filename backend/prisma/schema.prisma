generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  fullName  String   @map("full_name")
  email     String   @unique
  password  String?
  googleId  String?  @unique @map("google_id")
  image     String?
  role      Role     @default(MEMBER)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("users")
}

model Project {
  id           String   @id @default(uuid())
  title        String
  description  String   @db.Text
  technologies Json     // Array of technologies
  imageUrl     String?
  githubUrl    String?
  liveUrl      String?
  category     String
  featured     Boolean  @default(false)
  contributors Json     // Array of contributor user IDs or "all"
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("projects")
  @@index([category])
  @@index([featured])
}

model Achievement {
  id          String   @id @default(uuid())
  title       String
  description String   @db.Text
  date        DateTime
  imageUrl    String?
  linkedinUrl String?
  position    String   // e.g., "1st Place", "Winner", "Runner-up"
  competition String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("achievements")
  @@index([date])
}

model TeamMember {
  id          String   @id @default(uuid())
  name        String
  role        String   // e.g., "Team Lead", "Developer", "Designer"
  department  String?  // e.g., "Computer Engineering", "Electrical Engineering", "Mechanical Engineering"
  imageUrl    String?
  bio         String?  @db.Text
  linkedinUrl String?
  githubUrl   String?
  email       String?
  joinedDate  DateTime @default(now())
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("team_members")
  @@index([isActive])
}

model Course {
  id               String   @id @default(uuid())
  title            String
  description      String   @db.Text
  category         String
  instructor       String
  duration         String
  level            String   // Beginner, Intermediate, Advanced
  price            String
  imageUrl         String?
  learningOutcomes Json     // Array of learning outcomes/features
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@map("courses")
  @@index([category])
  @@index([level])
}

enum Role {
  ADMIN
  MEMBER
}
